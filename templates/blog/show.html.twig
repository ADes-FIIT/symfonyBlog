{% extends 'layout.html.twig' %}

{% block title %}{{ blog.title }}{% endblock %}

{% block body %}
    <article class="blog">
        <header>
            <div class="date">
                <time datetime="{{ blog.created|date('c') }}">{{ blog.created|date('l, F j, Y') }}</time>
            </div>
            <h2>{{ blog.title }}</h2>
        </header>
        <div>
            {{ blog.blog|raw}}
            <p><br>Tags: {{ blog.tags }}</p>
         </div>
    </article>
{% endblock %}
